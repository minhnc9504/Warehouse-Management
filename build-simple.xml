<?xml version="1.0" encoding="UTF-8"?>
<project name="Warehouse" default="dist" basedir=".">
    <description>Simple build script for Warehouse WAR</description>
    
    <!-- Properties -->
    <property name="src.dir" value="src/java"/>
    <property name="web.dir" value="web"/>
    <property name="lib.dir" value="lib"/>
    <property name="build.dir" value="build"/>
    <property name="build.classes.dir" value="${build.dir}/web/WEB-INF/classes"/>
    <property name="build.web.dir" value="${build.dir}/web"/>
    <property name="dist.dir" value="dist"/>
    <property name="war.name" value="Warehouse.war"/>
    
    <!-- Tomcat home will be passed from build.sh -->
    <property name="tomcat.home" value="${j2ee.server.home}"/>
    
    <echo message="Using Tomcat at: ${tomcat.home}"/>
    
    <!-- Verify Tomcat lib exists -->
    <available file="${tomcat.home}/lib" type="dir" property="tomcat.lib.exists"/>
    <fail unless="tomcat.lib.exists" message="Tomcat lib directory not found: ${tomcat.home}/lib"/>
    
    <!-- Check for servlet-api.jar specifically -->
    <available file="${tomcat.home}/lib/servlet-api.jar" property="servlet.api.exists"/>
    <available file="${tomcat.home}/lib/jakarta.servlet-api.jar" property="jakarta.servlet.api.exists"/>
    
    <echo message="Tomcat lib directory: ${tomcat.home}/lib"/>
    <echo message="servlet-api.jar exists: ${servlet.api.exists}"/>
    <echo message="jakarta.servlet-api.jar exists: ${jakarta.servlet.api.exists}"/>
    
    <!-- List Tomcat lib files for debugging -->
    <echo message="Tomcat lib directory contents:"/>
    <fileset id="tomcat.libs" dir="${tomcat.home}/lib" includes="*.jar"/>
    <pathconvert property="tomcat.libs.list" refid="tomcat.libs" pathsep="${line.separator}  - "/>
    <echo message="  - ${tomcat.libs.list}"/>
    
    <!-- Classpath - include all Tomcat libs -->
    <path id="compile.classpath">
        <!-- Project libraries -->
        <fileset dir="${lib.dir}">
            <include name="*.jar"/>
        </fileset>
        <!-- Tomcat libraries - all JARs -->
        <fileset dir="${tomcat.home}/lib">
            <include name="*.jar"/>
        </fileset>
        <!-- Explicit servlet API if found -->
        <fileset dir="${tomcat.home}/lib">
            <include name="servlet-api.jar"/>
            <include name="jakarta.servlet-api.jar"/>
            <include name="jakarta-servlet-api*.jar"/>
        </fileset>
    </path>
    
    <!-- Debug: Print classpath -->
    <pathconvert property="compile.classpath.list" refid="compile.classpath" pathsep="${line.separator}  - "/>
    <echo message="Compile classpath (${ant.file}):${line.separator}  - ${compile.classpath.list}"/>
    
    <!-- Clean -->
    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete dir="${dist.dir}"/>
    </target>
    
    <!-- Init -->
    <target name="init">
        <mkdir dir="${build.classes.dir}"/>
        <mkdir dir="${build.web.dir}"/>
        <mkdir dir="${dist.dir}"/>
    </target>
    
    <!-- Compile -->
    <target name="compile" depends="init">
        <javac srcdir="${src.dir}" 
               destdir="${build.classes.dir}" 
               includeantruntime="false"
               source="17"
               target="17"
               encoding="UTF-8">
            <classpath refid="compile.classpath"/>
        </javac>
        <copy todir="${build.classes.dir}">
            <fileset dir="${src.dir}" excludes="**/*.java"/>
        </copy>
    </target>
    
    <!-- Copy web files -->
    <target name="copy-web" depends="init">
        <copy todir="${build.web.dir}">
            <fileset dir="${web.dir}"/>
        </copy>
    </target>
    
    <!-- Copy libraries -->
    <target name="copy-libs" depends="init">
        <copy todir="${build.web.dir}/WEB-INF/lib">
            <fileset dir="${lib.dir}">
                <include name="*.jar"/>
            </fileset>
        </copy>
    </target>
    
    <!-- Build WAR -->
    <target name="dist" depends="compile,copy-web,copy-libs">
        <war destfile="${dist.dir}/${war.name}" webxml="${build.web.dir}/WEB-INF/web.xml">
            <fileset dir="${build.web.dir}">
                <exclude name="WEB-INF/web.xml"/>
            </fileset>
            <webinf dir="${build.web.dir}/WEB-INF">
                <include name="web.xml"/>
            </webinf>
        </war>
        <echo message="WAR file created: ${dist.dir}/${war.name}"/>
    </target>
</project>

